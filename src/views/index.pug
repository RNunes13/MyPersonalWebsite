extends ./_layouts/_base.pug

//- Template variables
block vars
  - var $templateName = 'home'
  - var $templateClass = 'home'

//- Page styles
block append styles
  link(href=`assets/css/personal-${$templateName}.css`, media='all', rel='stylesheet')/

//- Main Content
block content
  include ./_partials/home/_home-intro.pug
  include ./_partials/home/_home-about.pug
  include ./_partials/home/_home-contact.pug

//- Page scripts
block append scripts
  script(src=`assets/js/personal-${$templateName}.js`)
